<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tk.tkctechnologies.calc.calculator.MainActivity"
    android:padding="0dp"
    android:background="#fff"
    android:id="@+id/draw"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/gradientbgone"
    android:id="@+id/toolbar"
    >

</android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradientbgone"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            >
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:text=""
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textColor="@android:color/white"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:paddingBottom="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/mem_tv"
        android:text=""
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:text="0"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        />
</LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnClear"
                        android:background="#F5F5F5"
                        android:textColor="#FF8F6F"
                        android:text="AC" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="bracket"
                        android:background="#F5F5F5"
                        android:textColor="#FF8F6F"
                        android:text="( )" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/mem_btn"
                        android:onClick="memory"
                        android:background="#F5F5F5"
                        android:textColor="#FF8F6F"
                        android:text="M+/_" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:background="#F5F5F5"
                        android:textColor="#FF8F6F"
                        android:text="/"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:background="@drawable/normalbutton"
                        android:textColor="#B9B9B9"
                        android:text="7"
                        android:textSize="20sp"
                        />

                    <Button

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:background="@drawable/normalbutton"
                        android:textColor="#B9B9B9"
                        android:text="8"
                        android:textSize="20sp"
                        />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:textSize="20sp"

                        android:background="@drawable/normalbutton"
                        android:textColor="#B9B9B9"
                        android:text="9" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:textSize="20sp"

                        android:background="#F5F5F5"
                        android:textColor="#FF8F6F"
                        android:text="*" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:textSize="20sp"

                        android:background="@drawable/normalbutton"
                        android:textColor="#B9B9B9"
                        android:text="4" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="20sp"

                        android:onClick="btnCl"
                        android:background="@drawable/normalbutton"
                        android:textColor="#B9B9B9"
                        android:text="5" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:textSize="20sp"

                        android:background="@drawable/normalbutton"
                        android:textColor="#B9B9B9"
                        android:text="6" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:textSize="20sp"
                        android:background="#F5F5F5"
                        android:textColor="#FF8F6F"
                        android:text="-" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:background="@drawable/normalbutton"
                        android:textColor="#B9B9B9"
                        android:textSize="20sp"
                        android:text="1" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:textSize="24sp"
                        android:background="@drawable/normalbutton"
                        android:textColor="#B9B9B9"
                        android:text="2" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:textSize="20sp"
                        android:background="@drawable/normalbutton"
                        android:textColor="#B9B9B9"
                        android:text="3" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:textSize="20sp"
                        android:background="#F5F5F5"
                        android:textColor="#FF8F6F"
                        android:text="+" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:onClick="btnCl"
                        android:background="@drawable/normalbutton"
                        android:textColor="#B9B9B9"
                        android:text="0" />

                    <Button
                        android:layout_width="0dp"
                        android:textSize="20sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnCl"
                        android:background="@drawable/normalbutton"
                        android:textColor="#B9B9B9"
                        android:text="." />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="btnBack"
                        android:background="@drawable/normalbutton"
                        android:textColor="#B9B9B9"
                        android:src="@drawable/ic_back"
                        android:id="@+id/backspace"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="calc"
                        android:background="@drawable/gradientbgone"
                        android:textColor="#fff"
                        android:text="=" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
        <include layout="@layout/scmode"
            android:id="@+id/sc"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="end"
        android:layout_gravity="end"
        android:background="#fff"
        android:id="@+id/leftDrawer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradientbgone"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:text=""
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:paddingBottom="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
